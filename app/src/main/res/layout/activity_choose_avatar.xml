<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="18dp"
            android:textStyle="normal"
            android:textColor="@color/halfblack"

            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"/>


        <TextView
            android:id="@+id/change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改头像"
            android:textSize="18sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_margin="15dp"
            android:layout_centerInParent="true"/>


        <Button
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/success_change_bt"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_bt"
            android:text="完成"
            android:textSize="17sp"
            android:textColor="@color/darkgray"
            android:layout_alignParentEnd="true"
            android:enabled="false"
            />

    </RelativeLayout>

    <com.xmut.shoppingcenter.utils.ImageUtil.RadiuImageView
        android:layout_below="@+id/top"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img"
        android:layout_width="150dp"
        android:scaleType="centerCrop"
        android:layout_height="150dp"
        android:src="@drawable/originavatar"

        app:radius="15dp"
        />

</RelativeLayout>