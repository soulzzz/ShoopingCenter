<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_background">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/product_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xmut.shoppingcenter.utils.ImageUtil.RadiuImageView
                android:layout_centerVertical="true"
                android:id="@+id/product_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:radius="10dp"
                android:src="@drawable/avatar"
                />

            <TextView
                android:layout_toRightOf="@+id/product_img"
                android:id="@+id/product_name"
                android:gravity="start"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="name"/>

            <RelativeLayout
                android:layout_toRightOf="@id/product_img"
                android:layout_below="@+id/product_name"
                android:layout_marginLeft="5dp"
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rmb"
                    android:textColor="@color/warning_red"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"/>
                <TextView

                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/rmb"
                    android:id="@+id/product_price"
                    android:textColor="@color/warning_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.00"/>
                <TextView

                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/product_price"
                    android:id="@+id/product_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="1"
                    />
                <TextView
                    android:layout_toRightOf="@+id/product_sales"
                    android:id="@+id/i1"
                    android:text="人付款"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <TextView
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/product_img"
                android:layout_alignParentBottom="true"
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="store_name"
                android:drawableRight="@drawable/ic_goto"
                />
        </RelativeLayout>

</RelativeLayout>

