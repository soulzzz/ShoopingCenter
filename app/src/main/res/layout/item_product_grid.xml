<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_background">
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/product_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xmut.shoppingcenter.utils.ImageUtil.RadiuImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/product_img"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                app:radius="5dp"
                android:src="@drawable/avatar"
                />

            <TextView
                android:layout_below="@+id/product_img"
                android:id="@+id/product_name"
                android:gravity="start"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="name"/>

            <RelativeLayout
                android:layout_below="@+id/product_name"
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rmb"
                    android:textColor="@color/warning_red"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"/>
                <TextView
                    android:layout_toRightOf="@+id/rmb"
                    android:id="@+id/product_price"
                    android:textColor="@color/warning_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.00"/>
                    <TextView
                    android:id="@+id/product_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/i1"
                    android:textColor="@color/black"
                    android:text="1"
                    />
                <TextView
                    android:id="@+id/i1"
                    android:text="人付款"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/product_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_background">
            <TextView
                android:id="@+id/store_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="store_name"
                android:drawableLeft="@drawable/ic_store_icon"
                android:textColor="@color/black"
                android:drawableRight="@drawable/ic_goto"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

