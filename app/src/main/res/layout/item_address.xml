<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/blank"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/addressicon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_address"
                android:focusable="true" />
        </RelativeLayout>



            <RelativeLayout
                android:id="@+id/address_part"
                android:layout_toRightOf="@id/blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user_name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/address_name"
                    android:layout_marginLeft="10dp"
                    android:textStyle="normal"
                    android:text="18396056033"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="Address"
                    android:textColor="@color/halfblack"
                    android:textSize="15sp" />
            </RelativeLayout>




        </RelativeLayout>



    <Button
        android:id="@+id/btnEdit"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/darkgray"
        android:text="编辑"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/warning_red"
        android:text="删除"
        android:textColor="@android:color/white"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>

