<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/role1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_gray"
            android:gravity="center_vertical"
            android:text="管理员"

            android:textColor="@color/black" />

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/role1"
            android:gravity="center_vertical"

            android:text="time" />

        <TextView
            android:id="@+id/reason1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/role1"
            android:background="@drawable/white_bg"
            android:padding="10dp"
            android:text="理由理由理由理由理由理由理由理由理由理由理由" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rec_reason_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reason1" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_alignParentEnd="true"
            android:drawableRight="@drawable/ic_person"
            android:id="@+id/role2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="我"/>
        <TextView

            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/role2"
            android:id="@+id/time2"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="time"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/role2"
            android:background="@drawable/green_bg"
            android:id="@+id/reason2"
            android:text="理由理由理由理由理由理由理由理由理由理由理由"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/halfblack"
            android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/reason2"
                android:layout_alignParentEnd="true"
                android:id="@+id/rec_reason_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</RelativeLayout>