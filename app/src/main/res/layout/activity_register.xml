<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:orientation="vertical"
        android:background="@drawable/loginbg2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:background="@drawable/loginbg"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:orientation="vertical"
        android:background="@drawable/loginbg2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="375dp"
            android:background="@drawable/loginbg"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="8dp"
        android:text="Welcome\nRegister Now"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <EditText
            android:id="@+id/reg_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Username"
            android:drawableStart="@drawable/ic_person"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="#292929"
            android:textColorHint="#797979"

            android:background="@drawable/text_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="#999999" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_bg"
                android:drawableStart="@drawable/ic_pwd"

                android:hint="Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#292929"
                android:textColorHint="#797979"
                />
            <CheckBox
                android:visibility="gone"
                android:checked="false"
                android:id="@+id/pwd_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@drawable/selector_password"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="#999999" />
        <EditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Email"
            android:drawableStart="@drawable/ic_email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="#292929"
            android:textColorHint="#797979"
            android:background="@drawable/text_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="#999999" />




        <Button
            android:id="@+id/reg_signup"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:text="Sign Up"
            android:textColor="#fff"
            android:background="@drawable/dark_bg"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"/>

        <TextView
            android:id="@+id/reg_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign In"
            android:textColor="#31274f"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</RelativeLayout>